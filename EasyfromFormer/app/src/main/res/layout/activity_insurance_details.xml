                android:layout_height="0.3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/devider_black" />
            <LinearLayout
                android:id="@+id/lyt_Potassium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
