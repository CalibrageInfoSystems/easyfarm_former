<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"


        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_user"
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"


            />

        <TextView
            android:id="@+id/txt_name"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/whitepure"
            android:text="Roja"
            android:fontFamily="@font/rubik_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_farmercode"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/whitepure"
            android:text="APWGDBA00010001"
            android:fontFamily="@font/rubik_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_phone"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/whitepure"
            android:text="+91 7032214460"
            android:fontFamily="@font/rubik_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_email"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/whitepure"
            android:text="roja@gmail.com"
            android:fontFamily="@font/rubik_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1.5dp"-->
<!--            android:layout_marginLeft="@dimen/margin_15"-->
<!--            android:layout_marginRight="@dimen/margin_15"-->
<!--            android:background="@drawable/line_bg"-->
<!--            android:gravity="center" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="15dp"
        android:id="@+id/tabs"
        android:background="@drawable/whitee_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimarySplash"
        app:tabMode="fixed"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabSelectedTextColor="@color/colorPrimarySplash"
        app:tabTextAppearance="@style/TabLayoutStyle"
        app:tabTextColor="@color/black" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
</LinearLayout>