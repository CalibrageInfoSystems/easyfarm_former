<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        style="@style/ToolBarTheme.ToolBarStyle"
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green" >
        <TextView
            android:textColor="@color/white_new"
            android:textAlignment="textStart"
            android:text="Daily Reports"
            android:id="@+id/txt_name"
            style="@style/Common_textView_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative1"

        android:paddingBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/amount_label"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95"
            android:layout_below="@+id/amount_label"
            android:orientation="vertical">

            <Button
                android:id="@+id/previous_reports"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_margin="@dimen/_8dp"
                android:drawableLeft="@drawable/previous_reports_small"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginVertical="@dimen/margin_5"
                android:paddingStart="10dp"
                android:text="Previous Reports"
                android:background="@color/whitepure"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/green" />




        <LinearLayout
            android:id="@+id/linddfdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_8"
            android:weightSum="1">
            <TextView
                android:id="@+id/imageViewtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawableRight="@drawable/star"
                android:drawablePadding="5dp"

                android:paddingTop="5dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/image"
                android:textColor="@color/black2"
                android:textSize="@dimen/album_title" />
            <LinearLayout
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/lyt_img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_8"
                    android:layout_weight=".33">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/img_delete1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_delete_img" />
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/lyt_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight=".33">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/img_delete2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_delete_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lyt_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight=".33">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/img_delete3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_delete_img" />
                </RelativeLayout>

                <!-- <ImageView
                     android:id="@+id/iv2"
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="@dimen/margin_10"
                     android:layout_weight=".33"
                     android:scaleType="fitXY"
                     android:src="@mipmap/ic_launcher"
