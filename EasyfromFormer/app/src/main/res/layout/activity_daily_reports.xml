                 <ImageView
                     android:id="@+id/iv3"
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/margin_10"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="@dimen/margin_10"
                     android:layout_weight=".33"
                     android:scaleType="fitXY"
                     android:src="@mipmap/ic_launcher"
                     android:visibility="gone" />-->

                <!--                    <ImageButton-->
                <!--                        android:id="@+id/btn_addIMG"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_gravity="center"-->
                <!--                        android:background="@color/transparent"-->
                <!--                        android:src="@drawable/add_image"-->
                <!--                        android:text="+"-->
                <!--                        android:textColor="@color/whitepure"-->
                <!--                        tools:layout_editor_absoluteX="55dp"-->
                <!--                        tools:layout_editor_absoluteY="130dp" />-->
            </LinearLayout>

            <Button
                android:id="@+id/btn_addIMG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dot_bg"
                android:drawableLeft="@drawable/image_icons"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginVertical="@dimen/margin_5"
                android:paddingStart="10dp"
                android:text="Upload Image"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#4094C5" />
        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/images"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/textView55"
            android:fontFamily="@font/rubik_regular"
            android:hint=""
            android:visibility="gone"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/select_imagee"
            android:textColor="@color/black2"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:drawableRight="@drawable/star"
            android:drawablePadding="5dp"

            android:paddingTop="5dp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/vedio"
            android:textColor="@color/black2"
            android:textSize="@dimen/album_title" />
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_vieww"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_8"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:id="@+id/voicelinear"

            >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >




            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <VideoView
                    android:id="@+id/videoView"
                  android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
<!--            <Button-->
<!--                android:id="@+id/btnRecordVideo"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@color/btn_bg"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:paddingRight="20dp"-->
<!--                android:text="@string/btnRecordVideo"-->
<!--                android:textColor="@color/white" />-->

            <ImageView
                android:id="@+id/btnRecordVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/voicee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/rubik_regular"
                android:padding="5dp"
                android:text="@string/vedioecord"
                android:textColor="@color/black2"
                android:textSize="@dimen/album_title" />
        </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
android:layout_marginTop="150dp"
            android:layout_below="@+id/card_vieww">
        <Button
            android:id="@+id/sunmit_report"
            style="@style/Common_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_15"

            android:layout_alignParentRight="true"
            android:text="@string/submit_report">

        </Button>
        </LinearLayout>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>