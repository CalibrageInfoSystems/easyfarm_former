<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.5dp">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white_new"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_margin="@dimen/margin_5"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lay_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
      android:gravity="center_horizontal"
            android:padding="@dimen/margin_5"
            android:layout_margin="@dimen/margin_5"
            android:background="@color/half_gray"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:padding="3dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="-30dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="30% off"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="10dp" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">




                <TextView
                    android:id="@+id/Category"
                    style="@style/Common_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="abc"
                    android:textSize="@dimen/margin_12"
                    android:textAlignment="textStart"
                    android:textColor="@color/green" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">



                <TextView
                    android:id="@+id/discription"
                    style="@style/Common_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
android:maxLines="1"

                    android:text="@string/PolicyNumber"
                    android:textSize="@dimen/_14dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/price"
                    style="@style/Common_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="12"
                    android:textSize="@dimen/_16dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>