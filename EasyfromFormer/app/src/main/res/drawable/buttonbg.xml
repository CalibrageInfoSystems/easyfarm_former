<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />

            <gradient
                android:angle="270"
                android:startColor="@color/whitepure"
                android:centerColor="@color/whitepure"
                android:endColor="@color/whitepure"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="@color/black2" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>

</selector>